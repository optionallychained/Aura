{
    "name": "aura",
    "version": "0.8.2",
    "author": "optionallychained",
    "license": "MIT",
    "homepage": "https://optionallychained.github.io/Aura",
    "repository": {
        "type": "git",
        "url": "git://git@github.com/optionallychained/Aura.git"
    },
    "main": "publish/index.js",
    "types": "publish/index.d.ts",
    "files": [
        "publish/"
    ],
    "scripts": {
        "lint": "eslint --ext .ts --fix src",
        "test": "jest",
        "docs:serve": "browser-sync start --port 9090 --server './docs' --files './docs/**/*'",
        "docs:watch": "nodemon -w ./src/docs --ext pug,ts,scss,md,png,jpg,svg ./scripts/docgen.js --args dev",
        "docs:dev": "concurrently \"npm run docs:serve\" \"npm run docs:watch\"",
        "docs:dist": "node ./scripts/docgen.js",
        "predocs:deploy": "npm run docs:dist",
        "docs:deploy": "gh-pages -d docs",
        "app:2d:debug": "webpack serve --config webpack.app.2d.config.js --mode development",
        "app:2d:dev": "webpack serve --config webpack.app.2d.config.js --mode development --open 'Chrome'",
        "preapp:2d:dist": "npm run lint",
        "app:2d:dist": "webpack --config webpack.app.2d.config.js --mode production",
        "app:3d:debug": "webpack serve --config webpack.app.3d.config.js --mode development",
        "app:3d:dev": "webpack serve --config webpack.app.3d.config.js --mode development --open 'Chrome'",
        "preapp:3d:dist": "npm run lint",
        "app:3d:dist": "webpack --config webpack.app.3d.config.js --mode production",
        "preengine:dist": "npm run lint",
        "engine:dist": "webpack --config webpack.engine.config.js",
        "engine:publish": "tsc --project ./tsconfig.publish.json",
        "prepublishOnly": "npm run docs:deploy && npm run engine:dist && npm run engine:publish"
    },
    "devDependencies": {
        "@types/jest": "^26.0.22",
        "@typescript-eslint/eslint-plugin": "^4.20.0",
        "@typescript-eslint/parser": "^4.20.0",
        "autoprefixer": "^10.2.5",
        "browser-sync": "^2.26.14",
        "concurrently": "^6.0.0",
        "copy-webpack-plugin": "^8.1.0",
        "css-loader": "^5.2.0",
        "eslint": "^7.23.0",
        "gh-pages": "^3.1.0",
        "highlight.js": "^10.7.1",
        "html-webpack-plugin": "^5.3.1",
        "jest": "^26.6.3",
        "marked": "^2.0.1",
        "mini-css-extract-plugin": "^1.4.0",
        "nodemon": "^2.0.7",
        "normalize.css": "^8.0.1",
        "postcss-loader": "^5.2.0",
        "pug": "^3.0.2",
        "sass": "^1.32.8",
        "sass-loader": "^11.0.1",
        "ts-jest": "^26.5.4",
        "ts-loader": "^8.1.0",
        "typedoc": "^0.20.34",
        "typescript": "^4.2.3",
        "webpack": "^5.30.0",
        "webpack-cli": "^4.6.0",
        "webpack-dev-server": "^3.11.2"
    }
}
