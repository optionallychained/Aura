{
    "name": "protogl",
    "version": "0.0.6",
    "author": "jonnopon",
    "repository": {
        "type": "git",
        "url": "git://git@github.com/jonnopon/ProtoGL-TS.git"
    },
    "main": "publish/protogl.js",
    "types": "publish/protogl.d.ts",
    "files": [
        "publish/"
    ],
    "scripts": {
        "lint": "eslint --ext .ts --fix",
        "docs:serve": "browser-sync start --port 9090 --server './docs' --files './docs/**/*'",
        "docs:watch": "nodemon -w ./src/docs --ext pug,js,scss,md ./scripts/docgen.js --args dev",
        "docs:dev": "concurrently \"npm run docs:serve\" \"npm run docs:watch\"",
        "docs:dist": "node ./scripts/docgen.js",
        "demo:debug": "webpack serve --config webpack.demo.config.js",
        "demo:dev": "webpack serve --config webpack.demo.config.js --open 'Chrome'",
        "demo:dist": "npm run lint && webpack --config webpack.demo.dist.config.js",
        "engine:dist": "npm run lint && webpack --config webpack.engine.dist.config.js",
        "engine:publish": "tsc --project ./tsconfig.publish.json",
        "prepublishOnly": "npm run engine:dist && npm run engine:publish"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "autoprefixer": "^10.2.3",
        "browser-sync": "^2.26.13",
        "concurrently": "^5.3.0",
        "eslint": "^7.18.0",
        "highlight.js": "^10.5.0",
        "html-webpack-plugin": "^4.5.1",
        "marked": "^1.2.7",
        "minify": "^6.0.1",
        "nodemon": "^2.0.7",
        "normalize.css": "^8.0.1",
        "postcss": "^8.2.4",
        "pug": "^3.0.0",
        "sass": "^1.32.5",
        "ts-loader": "^8.0.14",
        "typedoc": "^0.20.17",
        "typescript": "^4.1.3",
        "webpack": "^5.17.0",
        "webpack-cli": "^4.4.0",
        "webpack-dev-server": "^3.11.2"
    }
}
