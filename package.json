{
    "name": "aura",
    "version": "0.13.0",
    "author": "optionallychained",
    "license": "MIT",
    "homepage": "https://optionallychained.github.io/Aura",
    "repository": {
        "type": "git",
        "url": "git://git@github.com/optionallychained/Aura.git"
    },
    "main": "publish/index.js",
    "types": "publish/index.d.ts",
    "files": [
        "publish/"
    ],
    "scripts": {
        "clean": "rm -rf ./compiled && rm -rf ./dist && rm -rf ./publish && rm -rf ./docs && rm -rf ./coverage",

        "lint": "eslint --ext .ts --fix src",
        "test": "jest",

        "docs:serve": "browser-sync start --port 9090 --server './docs' --files './docs/**/*'",
        "docs:watch": "nodemon -w ./src/docs --ext pug,ts,scss,md,png,jpg,svg ./scripts/docgen.js --args dev",
        "docs:dev": "concurrently \"npm run docs:serve\" \"npm run docs:watch\"",
        "docs:dist": "node ./scripts/docgen.js",
        "docs:deploy": "npm run docs:dist && gh-pages -d docs",

        "app:2d:debug": "webpack serve --config webpack.app.2d.config.js --mode development",
        "app:2d:dev": "webpack serve --config webpack.app.2d.config.js --mode development --open 'Chrome'",
        "app:2d:dist": "npm run lint && webpack --config webpack.app.2d.config.js --mode production",

        "app:3d:debug": "webpack serve --config webpack.app.3d.config.js --mode development",
        "app:3d:dev": "webpack serve --config webpack.app.3d.config.js --mode development --open 'Chrome'",
        "app:3d:dist": "npm run lint && webpack --config webpack.app.3d.config.js --mode production",

        "aura:2d:publish": "tsc --project ./tsconfig.publish.2d.json && webpack --config webpack.aura.2d.config.js",
        "aura:3d:publish": "tsc --project ./tsconfig.publish.3d.json && webpack --config webpack.aura.3d.config.js",

        "prepublishOnly": "npm run docs:deploy && npm run lint && npm run aura:2d:publish && npm run aura:3d:publish && npm run aura:publish"
    },
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "autoprefixer": "^10.4.2",
        "browser-sync": "^2.27.7",
        "concurrently": "^7.0.0",
        "copy-webpack-plugin": "^10.2.4",
        "css-loader": "^6.6.0",
        "eslint": "^8.8.0",
        "gh-pages": "^3.2.3",
        "highlight.js": "^11.4.0",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^27.5.1",
        "marked": "^4.0.12",
        "mini-css-extract-plugin": "^2.5.3",
        "nodemon": "^2.0.15",
        "normalize.css": "^8.0.1",
        "postcss-loader": "^6.2.1",
        "pug": "^3.0.2",
        "sass": "^1.49.7",
        "sass-loader": "^12.4.0",
        "ts-jest": "^27.1.3",
        "ts-loader": "^9.2.6",
        "typedoc": "^0.22.11",
        "typescript": "^4.5.5",
        "webpack": "^5.68.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.7.4"
    }
}
