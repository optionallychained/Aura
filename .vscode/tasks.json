{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start App",
            "type": "npm",
            "script": "app:debug",
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "source": "ts",
                "applyTo": "closedDocuments",
                "fileLocation": [
                    "relative",
                    "${cwd}"
                ],
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)",
                    },
                    "endsPattern": {
                        "regexp": "Compiled"
                    }
                }
            }
        }
    ]
}
