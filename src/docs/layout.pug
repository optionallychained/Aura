doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(name="theme-color", content="#000000")

        link(rel="stylesheet", href=relativePrefix + 'assets/css/main.css')

        title #{pageTitle} | ProtoGL Documentation

    body(class=bodyClass)
        nav
            include /includes/nav

        main
            block content

        footer
            include /includes/footer

        script(type="text/javascript", src=relativePrefix + 'assets/js/main.js')
